@model IEnumerable<MyUni.Web.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubmissionDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewRemarks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubmissionDetail.SubmissionDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewRemarks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubmissionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubmissionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubmissionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
